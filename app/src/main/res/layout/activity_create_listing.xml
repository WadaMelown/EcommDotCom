<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.S6105692.CreateListingActivity">

    <EditText
        android:id="@+id/item_name"
        android:layout_width="373dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="525dp"
        android:background="@android:color/black"
        android:hint="Name of Item"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20sp">

    </EditText>

    <EditText
        android:id="@+id/item_description"
        android:layout_width="369dp"
        android:layout_height="117dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="399dp"
        android:background="@android:color/black"
        android:hint="Description of Item"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20sp">

    </EditText>

    <EditText
        android:id="@+id/item_amount"
        android:layout_width="373dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="316dp"
        android:background="@android:color/black"
        android:hint="Amount of Items"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20sp">

    </EditText>

    <EditText
        android:id="@+id/address_create_listing"
        android:layout_width="373dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="234dp"
        android:background="@android:color/black"
        android:hint="Enter You Address"
        android:inputType="textPostalAddress"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20sp">

    </EditText>

    <EditText
        android:id="@+id/create_listing_phone_number"
        android:layout_width="373dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="149dp"
        android:background="@android:color/black"
        android:hint="Please Enter Your Phone Number"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="20sp">

    </EditText>

    <Button
        android:id="@+id/create_listing_button"
        android:layout_width="373dp"
        android:layout_height="74dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="7dp"
        android:background="@android:color/black"
        android:hint="Create Listing"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white" />

</RelativeLayout>