<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.S6105692.BestSellers">

    <TextView
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Best Sellers"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/category_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"
        />

    <ImageView
        android:id="@+id/t_shirt"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="112dp"
        android:src="@drawable/tshirts" />


    <ImageView
        android:id="@+id/sport_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="109dp"
        android:src="@drawable/sports" />

    <ImageView
        android:id="@+id/female_dresses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="213dp"
        android:layout_marginTop="110dp"
        android:src="@drawable/female_dresses" />

    <ImageView
        android:id="@+id/sweater"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="316dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="-1dp"
        android:src="@drawable/sweather" />


    <LinearLayout
        android:id="@+id/category_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"/>


    <ImageView
        android:id="@+id/glases"
        android:layout_width="110dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="293dp"
        android:src="@drawable/glasses" />

    <ImageView
        android:id="@+id/purse_and_wallets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="294dp"
        android:src="@drawable/purses_bags" />

    <ImageView
        android:id="@+id/hats"
        android:layout_width="111dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="205dp"
        android:layout_marginTop="293dp"
        android:src="@drawable/hats" />

    <ImageView
        android:id="@+id/shoes_socks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="316dp"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="-1dp"
        android:src="@drawable/shoess" />

    <LinearLayout
        android:id="@+id/category_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="45dp"/>


    <ImageView
        android:id="@+id/headphones"
        android:layout_width="110dp"
        android:layout_height="101dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="468dp"
        android:src="@drawable/headphoness" />

    <ImageView
        android:id="@+id/laptop_pc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="470dp"
        android:src="@drawable/laptops" />

    <ImageView
        android:id="@+id/watches"
        android:layout_width="111dp"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="202dp"
        android:layout_marginTop="468dp"
        android:src="@drawable/watches" />

    <ImageView
        android:id="@+id/mobile_phones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="315dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/mobiles" />
</RelativeLayout>